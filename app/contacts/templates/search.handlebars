<div id="contacts-search-form">
    <div class="search-input">
        <label for="input-query">Search</label>
        <input id="input-query" placeholder="e.g. Joe Bloggs" type="text" name="title" value="{{query}}">

        <input class="action-button search" type="submit" value="Email" id="submit-search-email"></input>
        <input class="action-button search" type="submit" value="Phone" id="submit-search-phone"></input>
    </div>
</div>

{{#if showHelp}}
<div class="card-container">
    <div class="today help">
        <p>Contacts can be saved to your phonebook by clicking the +<i class="ss-standard ss-user"></i> icon next to their contact details.</p>
    </div>
</div>
{{/if}}

<div id="loading">
    <img src="images/preloader.gif" class="preloader">
</div>

{{#if query}}
        {{#unless has_results}}
<div id="no-result">
    <p>No result for your query "{{query}}"</p>
</div>
        {{/unless}}
{{/if}}

<ul id="search-results" class="results-list">

</ul>

