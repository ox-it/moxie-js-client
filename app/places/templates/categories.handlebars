<div class="search-input">
    <input type="text" id="input_search" placeholder="Search places..." name="q">
    <span class="deleteicon ss-delete"></span>
</div>

<h2 class="free-heading" id="category_title">Places</h2>

<ul class="results-list" id="categories">
{{#types}}
    {{#if hasTypes}}
        {{! If this category has any sub-categories, place a link to them }}
        {{#if ../../category_name}}
            <a href="#places/search?type={{ type_prefixed }}">
        {{else}}
            <a href="#places/categories{{ type_prefixed }}">
        {{/if}}
    {{else}}
        <a href="#places/search?type={{ type_prefixed }}">
    {{/if}}
    <li><h3>{{ type_name }}</h3>
    {{#if description}}
        <p class="subtext">{{ description }}</p>
    {{/if}}
    </li></a>
{{/types}}
</ul>
