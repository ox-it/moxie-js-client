<div class="free-text">
	{{#if poi.name }}
		<h2>{{ poi.name }}</h2>
		<p class="type">{{ poi.type_name }}
		{{#if poi.opening_hours }}
			{{{currentlyOpen poi.opening_hours}}}
		{{/if}}
		</p>
	{{ else }}
		<h2>{{ poi.type_name }}</h2>
		{{! opening_hours should be a string if it exists}}
		{{# if poi.opening_hours }}
			<p class="type">{{{currentlyOpen poi.opening_hours}}}</p>
		{{/if}}
	{{/if}}

	{{#if poi.collection_times }}
	    <p class="type">{{{collectionTimes poi.collection_times}}}</p>
	{{/if}}

	<p class="metadata">
		{{#if poi.address }}{{ poi.address }}{{/if}}
	</p>
</div>
	{{#if rti}}
	<div id="poi-rti">
	    <img src="images/preloader.gif" class="preloader" width="15" height="15">
	</div>
	{{/if}}

<div class="free-text">
	<p class="metadata">
		{{#if poi.opening_hours }}{{ poi.opening_hours }}<br />
		{{/if}}
		{{#if poi.collection_times}}
		<p>Collection times: {{ poi.collection_times }}</p>
		{{/if}}
		{{#if poi.phone }}<a class="meta-action-button tel" href="tel:{{ poi.phone }}">{{ poi.phone }}</a>{{/if}}
		{{#if poi.website }}<a class="meta-action-button" href="{{ poi.website }}">Website</a>{{/if}}
	</p>

	{{! Buttons for phone or website }}
	{{! TODO only make this div visible if either phone or website exist }}
	<div class="metadata-buttons">
		{{#if poi.attributes.phone}}<a class="action-button tel" href="tel:{{ poi.attributes.phone }}">{{ poi.attributes.phone }}</a>{{/if}}
		{{#if poi.attributes.website}}<a class="action-button web" href="{{ poi.attributes.website }}" target="_blank">Website</a>{{/if}}
	</div>

	{{! Links to parents and children }}
	<dl>
	{{#if poi.attributes._links.parent}}
		<dt>Contained by</dt>
		<dd>
			<a href="#{{ poi.attributes._links.parent.href }}">{{ poi.attributes._links.parent.title }} {{#if poi.attributes._links.parent.type_name}}({{ poi.attributes._links.parent.type_name }}){{/if}}</a>
		</dd>
	{{/if}}
	{{#if poi.attributes._links.child}}
		<dt>Contains</dt>
		{{#poi.attributes._links.child}}
		<dd><a href="#{{ href }}" title="{{ title }}">{{ title }}</a></dd>
		{{/poi.attributes._links.child}}
	{{/if}}
	</dl>
</div>
