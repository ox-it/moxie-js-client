<div class="free-text">
	{{#if poi.name }}
		<h2>{{ poi.name }}</h2>
		<p class="type">{{ poi.type_name }}
		{{#if poi.opening_hours }}
			{{{currentlyOpen currentlyOpen}}}
		{{/if}}
		</p>
	{{ else }}
		<h2>{{ poi.type_name }}</h2>
		{{! opening_hours should be a string if it exists}}
		{{# if poi.opening_hours }}
			<p class="type">{{{currentlyOpen poi.opening_hours}}}</p>
		{{/if}}
	{{/if}}

	{{#if poi.collection_times }}
	    <p class="type">{{{collectionTimes poi.collection_times}}}</p>
	{{/if}}

	<p class="metadata">
		{{#if poi.address }}{{ poi.address }}{{/if}}
	</p>
</div>
{{#if poi.RTI}}
	<div class="rti">
    {{#if multiRTI}}
    <h3>{{ currentRTI.title }}
        {{#if alternateRTI}}
        ({{#alternateRTI}}<a href="#/places/{{../poi.id}}?rti={{type}}">{{ title }}</a>{{/alternateRTI}})
        {{/if}}
    </h3>
    {{/if}}
        <div id="poi-rti">
            <img src="images/preloader.gif" class="preloader" width="15" height="15">
        </div>
	</div>
{{/if}}

<div class="free-text">
	<p class="metadata">
		{{#if poi.opening_hours }}{{{formatOpeningHours poi.opening_hours parsedOpeningHours }}}<br />
		{{/if}}
		{{#if poi.collection_times}}
		<p>Collection times: {{ poi.collection_times }}</p>
		{{/if}}
	</p>

	{{! Buttons for phone or website }}
	{{! TODO only make this div visible if either phone or website exist }}
	<div class="metadata-buttons">
		{{#if poi.phone}}<a class="action-button tel" href="tel:{{ poi.phone }}">{{ poi.phone }}</a>{{/if}}
		{{#if poi.website}}<a class="action-button web" href="{{ poi.website }}" target="_blank">Website</a>{{/if}}
	</div>

	{{! Links to parents and children }}
	<dl>
	{{#if poi._links.parent}}
		<dt>Contained by</dt>
		<dd>
			<a href="#{{ poi._links.parent.href }}">{{ poi._links.parent.title }} {{#if poi._links.parent.type_name}}({{ poi._links.parent.type_name }}){{/if}}</a>
		</dd>
	{{/if}}
	{{#if poi._links.child}}
		<dt>Contains</dt>
		{{#poi._links.child}}
		<dd><a href="#{{ href }}" title="{{ title }}">{{ title }}</a></dd>
		{{/poi._links.child}}
	{{/if}}
	</dl>
</div>
