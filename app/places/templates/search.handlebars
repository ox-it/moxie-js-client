<div class="search-input">
    {{#if query.type}}
    <input type="text" placeholder="Search within {{query.type}}" name="q" value="{{query.q}}">
    {{else}}
    <input type="text" placeholder="Places search" name="q" value="{{query.q}}">
    {{/if}}
    <span class="deleteicon fa fa-times-circle-o"></span>
</div>
<ul class="facet-list">
    {{#facets}}
    <li class="label-facet" data-category="{{ name }}">{{ title }}</li>
    {{/facets}}
</ul>
<ul class="results-list">
</ul>
{{#if midRequest}}
<img src="images/preloader.gif" class="preloader">
{{else}}
{{#unless hasResults}}
<p>Your search - <strong>{{ query.q }}</strong> - did not match any places of interest.</p>
{{/unless}}
{{/if}}
